---
import { Button } from '@/components/ui/button';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
---

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <header class="bg-background sticky top-0 z-50 w-full border-b">
            <div class="mx-auto max-w-5xl px-4 h-14 flex items-center">
                <Button href="/" aria-label="Home" variant="ghost" size="icon" class="mr-2 text-primary hover:text-foreground">
                    <Icon name="favicon" class="size-6" />
                </Button>

                <div class="flex-1 text-center font-semibold tracking-wide select-none">
                    <slot name="title">tcg.cards</slot>
                </div>

                <Button type="button" aria-label="Settings" variant="ghost" size="icon" class="ml-2 text-muted-foreground hover:text-foreground">
                    <Icon name="mdi:cog" class="size-6" />
                </Button>
            </div>
        </header>
        <slot />
    </body>
</html>
