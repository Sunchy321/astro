---
import { Button } from 'flowbite-svelte';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
---

<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <header class="bg-primary-foreground sticky top-0 z-50 w-full border-b">
            <div class="mx-auto px-4 h-14 flex items-center">
                <Button
                    aria-label="Home"
                    size="icon"
                    pill={true}
                    href="/"
                    class="mr-2 p-2!"
                >
                    <Icon name="favicon" class="size-6" />
                </Button>

                <slot name="game"></slot>

                <div class="flex-1 text-center font-semibold tracking-wide select-none">
                    <slot name="title">tcg.cards</slot>
                </div>

                <Button
                    aria-label="Settings"
                    type="button"
                    size="icon"
                    pill={true}
                    color="default"
                    class="ml-2 p-2!"
                >
                    <Icon name="mdi:cog" class="size-6" />
                </Button>
            </div>
        </header>
        <slot />
    </body>
</html>
